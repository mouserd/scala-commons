<?xml version="1.0" encoding="UTF-8"?>
<web-app>
    <display-name>Scala Commons</display-name>

    <!-- Declare the existence of a servlet. -->
    <servlet>
        <servlet-name>RestfulServlet</servlet-name>
        <servlet-class>com.pixelus.servlet.RestfulServlet</servlet-class>
    </servlet>

    <!-- Map URLs to that servlet. -->
    <servlet-mapping>
        <servlet-name>RestfulServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
</web-app>